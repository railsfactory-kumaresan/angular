<%if  user.present? %>
<div class="tab-content inner">
  <div class="tab-wrapper">
    <div class="row">
      <h4>Plan Name: <label>(<%= pricing_plan.plan_name %>)</label></h4>
      <div class="col-lg-4 col-sm-6 col-md-12 col-xs-12">
        <%= form_for(pricing_plan, url: "/admin/client_settings/update" ) do |f| %>
            <div class="row">
              <div class="col-lg-12">
                <label>Email Count</label>
                <div class="form-group">
                  <%= f.text_field :email_count, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Email Count" , :id => "email_count", :tabindex => 2, :readonly => true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <label>Call Count</label>
                <div class="form-group">
                  <%= f.text_field :call_count, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Call Count", :id => "call_count", :tabindex => 3, :readonly => true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <label>SMS Count</label>
                <div class="form-group">
                  <%= f.text_field :sms_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "SMS Count" , :id => "sms_count", :tabindex => 4, :readonly => true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <label>Video/Photo Questions Count</label>
                <div class="form-group">
                  <%= f.text_field :video_photo_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "Video/Photo Questions Count" , :id => "photo_count", :tabindex => 5, :readonly => true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <label>Questions Count</label>
                <div class="form-group">
                  <%= f.text_field :questions_count, :class => "text_field rc_5 form-control input-medium"  , :placeholder => "Questions Count" , :tabindex => 5 , :readonly => true%>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <label>Customer Records Count</label>
                <div class="form-group">
                  <%= f.text_field :customer_records_count, :class => "text_field rc_5 form-control input-medium"  , :placeholder => "Customer Records Count" , :tabindex => 6, :readonly => true %>
                </div>
              </div>
            </div>
            <% unless settings.tenant_count.nil? %>
                <div class="row">
                  <div class="col-lg-12">
                    <label>Tenant Count</label>
                    <div class="form-group">
                      <%= f.text_field :tenant_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "Tenant Count" , :tabindex => 7, :readonly => true%>
                    </div>
                  </div>
                </div>
            <% end %>
            </div>
        <% end %>
            <div class="col-lg-4 col-sm-6 col-md-12 col-xs-12">
              <%= form_for(settings, url: "/admin/client_settings/update" ) do |f| %>
                  <div class="row">
                    <div class="col-lg-12">
                      <label>Email Count</label>
                      <div class="form-group">
                        <%= f.text_field :email_count, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Email Count" , :id => "email_count", :tabindex => 2 %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12">
                      <label>Call Count</label>
                      <div class="form-group">
                        <%= f.text_field :call_count, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Call Count", :id => "call_count", :tabindex => 3 %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12">
                      <label>SMS Count</label>
                      <div class="form-group">
                        <%= f.text_field :sms_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "SMS Count" , :id => "sms_count", :tabindex => 4 %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12">
                      <label>Video/Photo Questions Count</label>
                      <div class="form-group">
                        <%= f.text_field :video_photo_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "Video/Photo Questions Count" , :id => "photo_count", :tabindex => 5 %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12">
                      <label>Questions Count</label>
                      <div class="form-group">
                        <%= f.text_field :questions_count, :class => "text_field rc_5 form-control input-medium"  , :placeholder => "Questions Count" , :id => "questions_count", :tabindex => 5 %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12">
                      <label>Customer Records Count</label>
                      <div class="form-group">
                        <%= f.text_field :customer_records_count, :class => "text_field rc_5 form-control input-medium"  , :placeholder => "Customer Records Count", :id => "customers_count", :tabindex => 6 %>
                      </div>
                    </div>
                  </div>
                  <% unless settings.tenant_count.nil? %>
                      <div class="row">
                        <div class="col-lg-12">
                          <label>Tenant Count</label>
                          <div class="form-group">
                            <%= f.text_field :tenant_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "Tenant Count" , :id => "tenant_count", :tabindex => 7 %>
                          </div>
                        </div>
                      </div>
                  <% end %>
                  <div class="btn-wrap text-center btn-update-info">
                    <input type="hidden" id="settings_id" name="client_setting[id]" value="<%= settings.id %>" />
                    <%= f.submit  "Update Settings", :class => "button medium orange", :tabindex => 8  %>
                    <a href="/admin/client_settings" class="article" id="back_to_users">Cancel</a>
                  </div>
                  </div>
              <% end %>
            </div>
            </div>
        </div> <!-- Client Settings End -->
  <%else%>
      <span>No user results found.</span>
  <% end %>
<script>
    $("#email_count, #sms_count, #call_count, #photo_count, #questions_count, #customers_count, #tenant_count").keypress(function (e) {
        //if the letter is not digit then display error and don't type anything
        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            return false;
        }
    });
</script>