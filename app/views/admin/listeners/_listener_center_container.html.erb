    function initSourceMenu(ele) {
        function updateUI(ele, update) {
            var input = $(ele).find('input[type="checkbox"]');
            if(!update) {
                //toggle
                input.prop("checked", !input.prop("checked"));
            }
            var checked = $(input).is(':checked');
            if( checked ) {
                $(ele).find('.source-enabled').show();
                jQuery(".advance_search").show();
            } else {
                $(ele).find('.source-enabled').hide();
            }
            return false;
        }

        $(ele).find('.source-menu-item').each(function(){
            updateUI(this, true);
            $(this).click(function(){
                //TODO: add callback
                return updateUI(this)
            });
        });
    }

    $(document).ready(function() {
        $('.source-menu').each(function(){
            initSourceMenu(this);
        });

