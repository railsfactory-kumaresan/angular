<div class="modal fade" id="share_detaill" aria-hidden="true" tabindex='-1'>
  <div class="modal-dialog signup modal-size">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &nbsp;
        </button>
        <h4 class="modal-title">Share Article</h4>
      </div>
      <div class="modal-body signin">
        <div class="">
          <div class="cancel_head" id="qustion_suggestion_list" style="margin: 31px 0px 0px 42px !important;height: 305px !important; font-size: 15px !important;
                  font-family: cursive !important;">
            <form action="<%#=save_keywords_admin_listener_path(:id => current_user.id)%>" method="post" id="send_email">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
              <input type="hidden" name="keywords_content" id="keyword_id"/>
              <input type="hidden" name="type_of_email" id="type_of_email"/>

              <div class="col-md-12">
                <label for="share_email">To:</label><br>
                <input type="text" class="form-control" id="share_email" maxlength="" name="share_email" style="width:300px;"/>
                <label for="share_email" id="error_email"></label>
              </div>
              <div class="col-md-12">
                <label for="share_subject">Subject:</label><br>
                <input type="text" class="form-control" id="share_subject" maxlength="" name="share_subject" style="width:300px;"/>
                <label for="share_email" id="error_subject"></label>
              </div>
              <div class="col-md-12">
                <label for="share_message">Message:</label><br>
                <textarea row=10 class="form-control" value="" id="share_message" name="share_message" style="width:410px;"></textarea>
                <label for="share_email" id="error_message"></label>
              </div>
              <div class="btn-wrap text-center">
                <a id="sent_email" class="nt-nw" href="#">
                  Send
                </a>
                <a id="share_question_close" class="nt-nw" href="#" aria-hidden="true" data-dismiss="modal">
                  Cancel
                </a>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>	
  </div>
</div>
