<%= javascript_include_tag 'multitenant', 'data-turbolinks-track' => true %>
<div class="main-content">
  <div class="container">
    <div class="wrap-box">
      <div class="wrap-box-head clearfix"><h2>Account</h2></div>
      <div class="wrap-box-cont">
        <div class="row">
          <div class="col-md-12">
            <div class="white-box-wrapper">
              <div class="box-head clearfix">
                <h3><span class="glyphicon glyphicon-cog"></span>Settings</h3>
              </div>
              <div class="white-box">
                <!-- Offline payment -->
                <div class="link-downgrade">
                </div>
                <!-- Offline payment -->
                <!-- Nav tabs -->
                <%= render "shared/admin_menus_header"%>
                <div class="tab-content">
                  <div class="tab-wrapper">
                    <div class="row">
                      <div class="col-lg-4 col-sm-6 col-md-12 col-xs-12">
                        <%= form_for(user, url: is_edit ? "/corporate_users/#{user.id}" : "/corporate_users" ) do |f| %>

                            <div class="row">
                              <div class="col-lg-12">
                                <label>First Name</label>
                                <div class="form-group">
                                  <label class="sr-only" for="InputLastName">First Name</label>
                                  <%= f.text_field :first_name, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "First Name", :id => "InputFirstName"  , :tabindex => 2 %>
                                  <p><span class="error" style="width:190px;" id="error_first_name"><%= user.errors[:first_name][0] %></span></p>
                                </div>
                              </div>
                            </div>

                            <div class="row">
                              <div class="col-lg-12">
                                <label>Last Name</label>
                                <div class="form-group">
                                  <label class="sr-only" for="InputLastName">Last Name</label>
                                  <%= f.text_field :last_name, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Last Name", :id => "InputLastName"  , :tabindex => 3 %>
                                  <p><span class="error" style="width:190px;" id="error_address2"><%= user.errors[:last_name][0] %></span></p>
                                </div>
                              </div>
                            </div>

                            <div class="row">
                              <div class="col-lg-12">
                                <label>Email</label>
                                <div class="form-group">
                                  <label class="sr-only" for="InputFirstName">Email</label>
                                  <%= f.text_field :email, :class => "text_field rc_5 form-control input-medium" ,:id => "InputEmailAddress" , :placeholder => "Email Address" , :tabindex => 4 %>
                                  <p><span class="error" style="width:190px;" id="error_email"><%= user.errors[:email][0] %></span></p>
                                </div>
                              </div>
                            </div>

                            <div class="row">
                              <div class="col-lg-12">
                                <label>Tenant Name</label>
                                <div class="form-group">
                                  <label class="sr-only" for="InputTenantName">Tenant Name</label>
                                  <%= f.select(:tenant_id, @tenants, {:prompt => '-Select Tenant-'}, :id=>"tenant", :class=>"text_field rc_5 form-control input-medium", :tabindex => "5") %>
                                  <p><span class="error" style="width:190px;" id="error_email"><%= user.errors[:tenant_id][0] %></span></p>
                                </div>
                              </div>
                            </div>

                            <div class="row">
                              <div class="col-lg-12">
                                <label>Role Name</label>
                                <div class="form-group">
                                  <label class="sr-only" for="InputTenantName">Role Name</label>
                                  <%= f.select(:role_id, @roles, {:prompt => '-Select Role-'}, :id=>"role", :class=>"text_field rc_5 form-control input-medium", :tabindex => "6") %>
                                  <p><span class="error" style="width:190px;" id="error_email"><%= user.errors[:role_id][0] %></span></p>
                                </div>
                              </div>
                            </div>

                            </div>
                            </div>
                            </div>
                            <div class="btn-wrap text-center btn-update-info">
                              <a href="/corporate_users" class="article" id="back_to_users">Back</a>
                              <input type="hidden" id="user_id" name="user[parent_id]" value="<%= assign_parent_id %>" />
							  <% if is_edit %>
                                 <%= f.submit "Update User", :class => "button medium orange", :tabindex => 7  %>
                              <% else %>
								 <%= f.submit  "Create User", :class => "button medium orange", :tabindex => 7  %>
							  <%end%>
                            </div>
                        <% end %>
                        </div>
              </div>
            </div>
            <!--//. recent activity -->
          </div>
        </div>
      </div>
    </div> <!-- Wrap-bo -->
  </div> <!-- Container -->
</div>
</div>
</div>
</div>