	.logo img{
		border: 5px solid #343434;
		border-radius: 5px;
		max-width: 400px;
		max-height: 400px;
	}
  .company_name{
    width: 100%;
    text-align: center;
    color: #0191A9;
  }
  .company_name h2{
    margin-top: 5px;
  }
  .date{
    float: left;
    width: 20%;
    color: #666;
  }
  .default-logo{
    width: 75px;
    height: 75px;
  }
	.intro-page{
		height: 800px;
	}
	</style>
  </head>
