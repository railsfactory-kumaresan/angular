<div class="tab-pane-inner" id="single_tap_question">
  <div class="row">
    <div class="col-lg-12">
      <h4>User will be able to select only one of the following answers.</h4>
    </div>
  </div>
  <div class="form-group error-field error-msg-question-create">
    <div class="error answer_error" style="display:none">"Please enter the answers"</div>
		<div class="error answer_uni_error" style="display:none">Duplicate answer.</div>
  </div>
  <div id="another_answer">
    <%if question_option.present? %>
      <%question_option.each_with_index do |opt,i| %>
        <div class="row" id="row_count_<%= i %>" >
          <div class="col-lg-10 col-md-9 col-sm-9">
            <div class="form-group">
              <label class="sr-only" for="InputAnswer1">Answer</label>
              <input type="text" class="form-control input-medium ans_count" id="single_ans_<%= i%>" name="ans[<%= i%>]" value="<%= opt.option %>" tabindex="19" placeholder="Answer">
            </div>
          </div>
        </div>
      <%end%>
    <%else%>
      <div class="row" id="row_count_0">
        <div class="col-lg-10 col-md-9 col-sm-9">
          <div class="form-group">
            <label class="sr-only" for="InputAnswer1">Answer</label>
            <input type="text" class="form-control input-medium ans_count" id="single_ans_0" name="ans[0]" maxlength="30" tabindex="20" placeholder="Answer">
          </div>
        </div>
      </div>
      <div class="row" id="row_count_1">
        <div class="col-lg-10 col-md-9 col-sm-9">
          <div class="form-group">
            <label class="sr-only" for="InputAnswer2">Answer</label>
            <input type="text" class="form-control input-medium ans_count" id="single_ans_1" name="ans[1]" maxlength="30" tabindex="21" placeholder="Answer">
          </div>
        </div>
      </div>
    <%end%>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-md-10 col-sm-10">
      <a href="javascript:void(0);" class="" id="add_another_button">+ Add Another Answer</a>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10">
      <div class="form-group">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="question[include_other]" id="question_include_other"  <%if question.present? && question.include_other %> checked <%end%> tabindex="22">Include Other
          </label>
        </div>
        <div class="checkbox">
          <label>
          <input type="checkbox" name="question[include_text]" id="question_include_text" <%if question.present? && question.include_text %> checked <%end%> tabindex="23">Include free text option
          </label>
        </div>
      </div>
    </div>
  </div>
</div>