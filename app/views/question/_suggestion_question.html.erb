<div class="modal-body question-suggestion-lb">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <ul id="question_suggestion_list">
        <% if question.present? %>
        <% question.each do |ques|%>
        <li class="question-suggestion" id="<%= ques.id%>"><%= ques.question%></li>
        <%end%>
        <% else %>
        <li>No Suggestion is available</li>
        <%end%>
      </ul>
    </div>
  </div>
 </div>
<script type="text/javascript">
  jQuery("#question_suggestion_list").delegate('li', 'click', function () {
    jQuery.ajax({
      url: "/fill_sugg_qst?qst_id="+$(this).attr('id'),
      type: 'GET',
      success: function(data){
        jQuery('#question_suggestion_model').modal('hide');
        $('.modal-backdrop').remove();
      }
    });
  });
</script>
