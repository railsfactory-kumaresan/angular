  <div class="modal fade" id="sentimental_report_modal" aria-hidden="true">
    <div class="modal-dialog signup">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &nbsp;
          </button>
          <h4 class="modal-title" id="modal-title">Keywords List</h4>
        </div>
        <div class="modal-body popup-wrapper">
          <div class="container" id="modal-body-content">
            <div id="modal-content-display" class="sentiment-report">
              The requested content cannot be loaded. Please try again later.
            </div>
            <div class="key-words" id="sentimental_keywords_list" style="display:none">
                  <% if status != "dashboard" %>
                    <%= render "keywords", :keywords => keywords %>
                  <%end%>
            </div>
            <div class="key-words" id="sentimental_comments_list" style="display:none">
              <% if status != "dashboard" %>
                  <%=render "comments", :comments => comments %>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<style>
  #sentimental_report_modal .modal {
    overflow-y: hidden;
  }
</style>