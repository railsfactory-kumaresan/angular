              <div class="views-responses">
               <% id = @question.present? ? "?slug=#{@question.slug}" : "" %>
               <% unless id.blank? %>
                <div class="views-response-wrap">
                  <div class="row">
                    <a href="/views/question_view_logs<%=id%>" onclick="jQuery('.loading').show();" style="text-decoration:none;">
                     <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="box-display views-display">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        <span class="views-count"><%=@total_views_count%></span>
                        <a style="text-decoration:none;">Views</a>
                      </div>
                    </div></a>
                    <a href="/responses/question_response_logs<%=id%>" onclick="jQuery('.loading').show();" style="text-decoration:none;">
                      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="box-display response-display">
                        <span class="glyphicon glyphicon-envelope"></span>
                        <span class="views-count"><%=@total_responses_count%></span>
                        <a style="text-decoration:none;">Responses</a>
                      </div>
                    </div>
                    </a>
                  </div>
                </div>
                 <% else %>
                    <div class="views-response-wrap">
                      <div class="row">
                        <a href="/views/question_view_logs" onclick="jQuery('.loading').show();" style="text-decoration:none;">
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="box-display views-display">
                              <span class="glyphicon glyphicon-eye-open"></span>
                              <span class="views-count"><%=@total_views_count%></span>
                              <a style="text-decoration:none;">Views</a>
                            </div>
                          </div></a>
                        <a href="/responses/question_response_logs" onclick="jQuery('.loading').show();" style="text-decoration:none;">
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="box-display response-display">
                              <span class="glyphicon glyphicon-envelope"></span>
                              <span class="views-count"><%=@total_responses_count%></span>
                              <a style="text-decoration:none;">Responses</a>
                            </div>
                          </div>
                        </a>
                      </div>
                    </div>
                 <% end %>
              </div>